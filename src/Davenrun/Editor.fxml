<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="Davenrun.EditorController" xmlns:fx="http://javafx.com/fxml/1" hgap="5" vgap="5">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" hgrow="NEVER"/>
        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
    </columnConstraints>
	
    <Label text="Level:" GridPane.columnIndex="0" GridPane.rowIndex="0"/> 
    <Label text="Armor:" GridPane.columnIndex="0" GridPane.rowIndex="1"/> 
    <Label text="Attackdamage:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Label text="health" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Label text="bank:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    
    <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" /> 
    <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" /> 
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2" /> 
	    <TextField fx:id="health" GridPane.columnIndex="1" GridPane.rowIndex="2" /> 
                <TextField fx:id="bank" GridPane.columnIndex="1" GridPane.rowIndex="2" /> 
    <padding>
        <Insets  top="10" left="10" right="10" bottom="10"/>
    </padding>
	
</GridPane>